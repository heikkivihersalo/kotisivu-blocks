{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "ksd/button",
	"title": "Button",
	"category": "design",
	"icon": "button",
	"description": "Default button that follows theme global styling",
	"keywords": [ "button" ],
	"textdomain": "kotisivu-theme-blocks",
	"supports": {
		"className": false,
		"reusable": false,
		"anchor": true
	},
	"editorScript": "file:../../../../build/js/button/button.js",
    "editorStyle": "file:../../../../build/css/button.css",
    "style": "file:../../../../build/css/style-button.css",
	"attributes": {
		"post": {
			"type": "object"
		},
		"linkURL": {
			"type": "string",
			"default": ""
		},
		"linkTitle": {
			"type": "string",
			"default": ""
		},
		"linkText": {
			"type": "string",
			"default": "Read More"
		},
		"linkTarget": {
			"type": "string"
		},
		"linkRel": {
			"type": "string"
		},
		"hasTracking": {
			"type": "boolean",
			"default": false
		},
		"trackingIdentifier": {
			"type": "string",
			"default": ""
		}
	},
	"styles": [
		{ "name": "clr--primary", "label": "Primary", "isDefault": true },
		{ "name": "clr--secondary", "label": "Secondary" },
		{ "name": "clr--outline", "label": "Outline" }
	]
}

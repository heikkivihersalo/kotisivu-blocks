{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "ksd/column-container",
	"title": "Column Container",
	"category": "design",
	"icon": "screenoptions",
	"description": "Container for multiple columns. Can be used to build grid layouts.",
	"keywords": [ "container, columns, column" ],
	"textdomain": "kotisivu-theme-blocks",
	"supports": {
		"className": false
	},
	"editorScript": "file:../../../../build/js/column-container/column-container.js",
    "editorStyle": "file:../../../../build/css/column-container.css",
    "style": "file:../../../../build/css/style-column-container.css",
	"attributes": {
		"wrapperToggle": {
			"type": "boolean"
		},
		"wrapperClass": {
			"type": "string",
			"default": ""
		},
		"columnCount": {
			"type": "number",
			"default": 1
		},
		"columnLock": {
			"type": "boolean",
			"default": false
		},
		"alignmentReverse": {
			"type": "boolean"
		},
		"modifiers": {
			"type": "string",
			"default": ""
		},
		"template": {
			"type": "array",
			"default": []
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", false ],
			"default": false
		},
		"align": {
			"type": "string",
			"default": "full"
		}
	}
}
